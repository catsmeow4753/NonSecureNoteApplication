@page
@using NonSecureNoteApplication.Models
@model NonSecureNoteApplication.Pages.NoteEditorModel
@{
	ViewData["Title"] = "Note Editor";
}

<h2>Note Editor</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input asp-for="@Model.DataModel.TitleText" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Text</label>
                <input asp-for="@Model.DataModel.BodyText" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input asp-page-handler="delete" method="post" type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<br />

<h3>Notes</h3>
<table>
    <tr>
        <th>
            File Name
        </th>
    </tr>
    @for (int i = 0; i < Model.NoteList.Count; i++)
    {
        <tr>
            <td>
                @Model.NoteList[i].TitleText
            </td>
            <td>
                <input asp-page-handler="edit" asp-route-id="@i" method="post" type="submit" value="Open" class="btn btn-primary" />
            </td>
        </tr>
    }
</table>